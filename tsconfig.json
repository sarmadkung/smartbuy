{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@repo/ui": ["packages/ui/src/index.ts"],
      "@repo/ui/*": ["packages/ui/src/*"],
      "@repo/screens": ["packages/screens/src/index.ts"],
      "@repo/screens/*": ["packages/screens/src/*"]
    },
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
